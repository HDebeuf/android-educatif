<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textInputGray</item>
        <item name="colorControlActivated">@color/textInputGray</item>

    </style>

    <style name="DefaultBackground" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/wallpaper_material</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


</resources>
